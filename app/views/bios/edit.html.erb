<div class="container">
  <div class="text-center pt-5">
  </div>
  <br>

  <div class="mt-4">
      <div class="row d-flex justify-content-center">
        <div class="col-5 bg-white p-5 rounded-lg">
          <div class="bio-form">
            <h1 class="text-center font-bold">Edit your profile</h1>
            <div class="mt-3">
              <%= simple_form_for @bio do |b| %>
              <%= b.input :username %>
              <%= b.input :description %>
              <div class="d-flex justify-content-center">
               <%= cl_image_tag current_user.bio.photo.key, class: "avatar-xlarge" %>
              </div>
              <%= b.input :photo, input_html: { class: 'd-none is-clickable' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
              <div class="d-flex justify-content-center">
                <%= b.submit "Edit profile", class: 'button is-link' %>
              </div>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-end">
            <% if @bio.user.exchange.nil? %>
              <%= link_to "Add Exchange", new_exchange_path %>
            <% else %>
              <%= @bio.user.exchange.name %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>

