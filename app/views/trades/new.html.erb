<<div style="background-color: #EEF1FA;">
  <br><br><br>
  <div class="rounded-lg overflow-hidden shadow max-w-3xl mx-auto p-5 bg-white " style="width: 50%;">
    <span class="is-size-3 "> New Trade </span>
    <div class="pt-3">
      <%= simple_form_for @trade, remote: true do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-group">
          <% tickers = ['BTC', 'ETH', 'BCH', 'ZEC', 'RCN', 'MTB18', 'LTC', 'RPC', 'UBI'] %>
          <%= f.input :symbol, label: "Ticker", :collection => tickers %>
          <%= f.input :side, label: 'Position', :collection => ['BUY', 'SELL'] %>
          <div class="form-text mt-5">
            <%= f.input :entry_price, label: "Entry Price", input_html: { type: 'number' } %>
          </div>
          <div class="form-text">
            <%= f.input :take_profit, label: "Take Profit", input_html: { type: 'number' } %>
          </div>
          <div class="form-text">
            <%= f.input :stop_loss, label: "Stop Loss", input_html: { type: 'number' } %>
          </div>
          <div class="form-actions mx-auto d-flex justify-content-center pt-4">
            <%= f.submit "Trade", class: "button is-link is-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
