<h1>Tu Portfolio</h1>
<br>
<% pnl_hash = {} %>
<% @trades.each do |trade| %>
  <% if !trade.pnl.nil?  %>
    <% pnl_hash[trade.created_at] = trade.pnl %>
  <% end %>
<% end %>


<%= line_chart (pnl_hash) %>




<h2>Posiciones</h2>
<br>
<% @positions.each do |position| %>
  <p>Trader</p>
  <%= position.trade.trader.bio.username %>
  <p>Moneda</p>
  <%= position.trade.symbol %>
  <p>Side</p>
  <%= position.trade.side %>
<% end %>
